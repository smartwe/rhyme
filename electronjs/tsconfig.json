{
  "buildOptions": {
    "verbose": false
  },
  "compilerOptions": {
    "preserveWatchOutput": true,
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "../public",
    "allowSyntheticDefaultImports": true,
    "rootDirs": [".", "../share"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "noImplicitAny": true,
    "baseUrl": "."
  },
  "include": ["**/*", "../share/**/*"]
}
