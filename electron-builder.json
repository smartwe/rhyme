{
  "appId": "com.github.rhyme-player.rhyme",
  "mac": {
    "category": "public.app-category.music",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "icons/icon.icns",
    "artifactName": "${name}-${arch}.${ext}"
  },
  "linux": {
    "category": "AudioVideo",
    "target": [
      {
        "target": "deb",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "rpm",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "pacman",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "AppImage",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "icons/png",
    "executableName": "rhyme",
    "artifactName": "${name}-${arch}.${ext}",
    "maintainer": "Abdallah Mohammad <abdallah.mam29@gmail.com>"
  },
  "deb": {
    "depends": ["libdbus-1-dev", "libglib2.0-dev"]
  },
  "snap": {
    "plugs": [
      "desktop",
      "desktop-legacy",
      "home",
      "x11",
      "browser-support",
      "network",
      "pulseaudio",
      "audio-playback",
      "alsa"
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "icons/icon.ico",
    "artifactName": "${name}-${arch}-setup.${ext}"
  },
  "portable": {
    "artifactName": "${name}-${arch}-portable.${ext}"
  }
}
