{
  "name": "rhyme",
  "productName": "Rhyme",
  "description": "The #1 cross-platform open source music player and streamer.",
  "author": "The Rhyme Project",
  "version": "0.1.0",
  "private": false,
  "main": "electron.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "notes-checker": "node NotesChecker.js",
    "start": "electron .",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "format-check": "prettier --check \"{,!(node_modules|public)/**/}*.{js,ts,css,scss,md,json,svelte}\"",
    "format": "prettier --write \"{,!(node_modules|public)/**/}*.{js,ts,css,scss,md,json,svelte}\""
  },
  "build": {
    "appId": "com.github.rhyme-player.rhymeplayer",
    "directories": {
      "output": "build_dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "rhyme-player",
        "repo": "RhymePlayer"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 120,
          "y": 220
        },
        {
          "x": 400,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "icon": "icons/icon.icns",
      "target": [
        "dmg",
        "pkg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "maintainer": "The Rhyme Project",
      "icon": "icons/linux"
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        "msi",
        "nsis"
      ]
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "@types/node": "^15.12.4",
    "electron": "^13.1.2",
    "electron-builder": "^22.11.7",
    "electron-reload": "^1.5.0",
    "node-sass": "^6.0.0",
    "prettier": "^2.3.1",
    "prettier-plugin-svelte": "^2.3.0",
    "rhyme-icons": "^1.1.5",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.35.1",
    "sirv-cli": "^1.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.0.0",
    "svelte-spa-router": "^3.1.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "chokidar": "^3.5.1",
    "electron-is-dev": "^2.0.0",
    "electron-json-storage": "^4.5.0",
    "howler": "^2.2.1",
    "music-metadata": "^7.8.6"
  }
}
