{
  "compileOnSave": false,
  "watchOptions": {
    "synchronousWatchDirectory": false
  },
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "noErrorTruncation": true,
    "lib": ["dom", "es2015", "es2016", "es2017.object"],
    "paths": {
      "@/*": ["src/*"],
      "icons/*": ["icons/*"]
    }
  },
  "exclude": ["**/node_modules", "**/__tests__", "./build/**/*", "./dist/**/*"]
}
